{% extends 'base.html.twig' %}

{% block title %}Page des articles{% endblock %}

{% block body %}

<div class="articles">
{% for post in posts %}
    <div class="article">
        {{ post.title }}
        <a href="{{ path('post_show', {'id': post.id}) }}" class="btn-primary">Lire la suite</a>
        {% if is_granted('ROLE_AUTHOR') %}
            <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn-primary">Modifier</a>
        {% endif %}
    </div>
{% endfor %}
</div>
<div>
{% if is_granted('ROLE_AUTHOR') %}
    <a href="{{ path('post_create') }}" class="btn-primary">Cr√©er un article</a>
{% endif %}

{% endblock %}
